extends ../theme
block append head-link
    link(rel='stylesheet', href='/organization/css/public/login.css')
block content
    .login
        form(class="login-form", action="#{action}", method="POST")
            h3.alert #{message}
            brs
            br
            h1 Email
            input(type="text", name="name", id="name", autocomplete="off")
            h1 Password
            input(type="password", name="password", id="password")
            br
            br
            input(type="submit", class="button", value="LOGIN").black
